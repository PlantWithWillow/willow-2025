{%- style -%}
  .features {
    margin-top: 3rem;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 3rem;
    color: var(--color-foreground);
  }
  .features .feature-card {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    flex-basis: calc(50% - 12px);
  }

  .features .feature-card .feature-card--icon {
    background: var(--color-badge-background);
    fill: var(--color-badge-foreground);
    width: 36px;
    height: 36px;
    min-width: 36px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .features .feature-card p {
    margin-top: 0;
    margin-bottom: 10px;
  }
  .features .feature-card .feature-card--header {
    font-weight: bold;
    font-size: 2rem;
    margin-top: 0;
  }
  .features-columns img {
    max-width: 60%;
    height: auto;
    margin: 2rem auto 1rem;
    display: block;
  }
  @media screen and (min-width: 989px) and (max-width: 1350px) {
    .features .feature-card {
      flex-basis: 100%;
    }
  }
  @media screen and (max-width: 600px) {
    .features .feature-card {
      flex-basis: 100%;
    }
  }
  @media screen and (max-width: 988px) {
    .features .feature-card .feature-card--header {
      font-size: 1.8rem;
    }
    .features-columns img {
      max-width: 80%;
    }
  }
{%- endstyle -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="features-columns multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width page-width--narrow section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="features-title title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list features contains-content-container grid grid--1-col grid--{{ section.settings.columns_mobile }}-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="feature multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <div class="feature-card content-container">
              <div
                class=" feature-card--icon"
                {% if block.settings.icon_background contains '#' %}
                  style="background: {{ block.settings.icon_background }}"
                {% endif %}
              >
                {% render 'icon-accordion', icon: block.settings.icon, fill: block.settings.icon_fill %}
              </div>
              <div class="feature-card--content">
                {%- if block.settings.title != blank -%}
                  <h3 class="feature-card--header">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="rte">{{ block.settings.text }}</div>
                {%- endif -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
    <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a
          class="button button--primary"
          {% if section.settings.button_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_link }}" rel="noopener" target="_blank"
          {% endif %}
        >
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
    {%- if section.settings.image != blank -%}
      <div class="feature--image{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy' }}
      </div>
    {%- endif -%}
  </div>
</div>

